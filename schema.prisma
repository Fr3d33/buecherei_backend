datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @id @unique @default(autoincrement())
  email   String   @unique
  name    String
  passwd  String
  manager Boolean?
}

model Book {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  description   String?
  categories    Categorie[]     @relation("BookCategories")
  BookCategorie BookCategorie[]
  author        String?
}

model Categorie {
  id            Int             @id @default(autoincrement())
  name          String?
  books         Book[]          @relation("BookCategories")
  BookCategorie BookCategorie[]
}

model BookCategorie {
  bookId      Int
  categorieId Int
  book        Book      @relation(fields: [bookId], references: [id])
  categorie   Categorie @relation(fields: [categorieId], references: [id])

  @@id([bookId, categorieId]) // Kombinierter Primärschlüssel für die Beziehung
}
