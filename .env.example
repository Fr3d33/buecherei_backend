# Database Configuration
# Replace with your actual PostgreSQL connection string
DB_URL="postgresql://username:password@localhost:5432/buecherei_db"

# JWT Secret Key
# Generate a strong, random secret key for JWT token signing
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Example: a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456
TOKEN_KEY="generate-your-own-32-byte-secret-key-here"

# Email Configuration (for nodemailer)
# Configure these if you plan to use email functionality
EMAIL_USER="admin@yourdomain.com"
EMAIL_PASS="your-app-specific-password"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587

# Server Configuration
PORT=4001
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"
